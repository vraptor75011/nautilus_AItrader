# Exchange API Keys
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# AI Service API Keys
DEEPSEEK_API_KEY=

# Optional: If you need OKX for reference or testing
OKX_API_KEY=
OKX_SECRET=
OKX_PASSWORD=

# Strategy Parameters (override YAML config)
EQUITY=10000                     # Initial capital in USDT
LEVERAGE=10                      # Position leverage (1-125)
BASE_POSITION_USDT=100          # Base position size in USDT

# Risk Management
MAX_POSITION_RATIO=0.10         # Max 10% of equity per position
HIGH_CONFIDENCE_MULTIPLIER=1.5
MEDIUM_CONFIDENCE_MULTIPLIER=1.0
LOW_CONFIDENCE_MULTIPLIER=0.5
TREND_STRENGTH_MULTIPLIER=1.2

# Trading Parameters
TIMEFRAME=15m                    # Bar interval (5m, 15m, 1h, etc.)
TIMER_INTERVAL_SEC=900          # Update frequency in seconds (900 = 15 min)
MIN_CONFIDENCE_TO_TRADE=MEDIUM  # LOW, MEDIUM, HIGH

# Testing
TEST_MODE=false                 # Set to true for simulation mode
DRY_RUN=false                   # Set to true to skip order execution

# Logging
LOG_LEVEL=INFO                  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/deepseek_strategy.log

# Monitoring
ENABLE_TELEGRAM=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
